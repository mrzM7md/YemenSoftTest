class LoginRoute extends StatelessWidget {
  const LoginRoute({super.key});

  @override
  Widget build(BuildContext context) {
    return BlocProvider(
      create: (context) => LoginCubit(baseLoginMethods: LoginMethods(baseLoginLogic: LoginLogic())),
      child: LoginPage(),
    );
  }
}

